<style>
  .rank {
    background-color: black;
    color: white;
    margin-bottom: 0px;
    height: 40px;
    padding-top: 8px;
  }
</style>
<table class="table table-hover">

    <tbody>
      <h5 class="text-center rank">ユーザーランキング</h5>
      <% n = 1 %>
      <% rank_user.each do |user| %>
      <tr>
        <th scope="row" class="text-center"><i class="fas fa-crown" id="rank<%= n %>"></i><br><%= n %></th>
        <td>
          <%= attachment_image_tag user,:profile_image, size:"50x50", fallback: "no_image.jpg", class:"rounded-circle" %>
        </td>
        <td>
          <%= link_to user_path(user) do %>
            <%= user.name %><br>
          <% end %>
          score　<strong><%= user.score %></strong>
        </td>

      </tr>
      <% n = n+=1 %>
      <% end %>
    </tbody>
  </table>
