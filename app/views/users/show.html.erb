<div class="container">
  <div class="row top">

    <div class="col-lg-3 col-lg-offset-1">
      <%= attachment_image_tag @user, :profile_image, size:"200x200", class:"rounded", fallback: "no_image.jpg" %><br>
      <%= @user.name %><br>
      <strong>score </strong><%= @user.score %><br>
        <%= link_to "問題を作成する","#" %>
    </div>

    <div class="col-lg-8">
      <div class="card card-body bg-light p-5">
      <%= @user.introduction %>
      </div>

      <div class="row">
        <div class="col-lg-2 offset-lg-7">
          <%= link_to edit_user_registration_path(@user.id) do %>
            <button type="button" class="btn btn-primary">
              編集
            </button>
          <% end %>
        </div>

        <div class="col-lg-2">
          <% if @user.id == current_user.id %>
            <%= link_to destroy_user_session_path,method: :delete do %>
              <button type="button" class="btn btn-primary">
                ログアウト
              </button>
            <% end %>
          <% else %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

      <ul class="nav nav-tabs">

      	<li class="col-lg-1"><a href="#question" data-toggle="tab">
          <button type="button" class="btn btn-primary">
            質問
          </button></a>
        </li>

      	<li class="col-lg-1"><a href="#answer" data-toggle="tab">
            <button type="button" class="btn btn-primary">
              回答
            </button></a>
        </li>

      	<li class="col-lg-1"><a href="#sampleContentD" data-toggle="tab">
          <button type="button" class="btn btn-primary">
            問題
          </button></a>
        </li>

      </ul>


      <div class="tab-content">

      	<div class="tab-pane" id="question">
          <%= render 'users/question', questions:@questions, user:@user %>
      	</div>

      	<div class="tab-pane" id="answer">
          <%= render 'users/answer', answers:@answers, user:@user %>
      	</div>


      	<div class="tab-pane" id="sampleContentD">
      		<p>タブＤの内容</p>
      	</div>
      </div>

</div>
