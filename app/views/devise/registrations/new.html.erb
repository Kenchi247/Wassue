<style>
  .up-header {
    padding: 50px;

  }
  .up {
    background-color: white;
    height:600px;
    margin-top: 200px;
  }
  body {
    background-color:#2a3644;
  }
  .container {
    max-width: 700px;
  }

  .btn-primary, .btn-success {
    margin-top: 10px;
  }

</style>


<div class="container">
  <div class="up text-center">
    <h2 class="up-header">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザーネーム", size:"50" %>
      </div><br>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" , size:"50"%>
      </div><br>


      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"６字以上でpasswordを決めてください", size:"50" %>
      </div><br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"もう一度passwordを入力してください", size:"50" %>
      </div><br>
      <div class="row">
        <div class="col-2 offset-3">
          <%= f.submit "登録する", class:"btn btn-primary btn-sm" %>
        </div>
	
	<div class="col-2">
	  <%= link_to "戻る", :back, class:"btn btn-primary btn-sm" %>
	</div>
	
          <div class="col-2">
            <%= link_to "ログイン", new_session_path(resource_name), class:"btn btn-success btn-sm" %>
          </div>
       </div><br><br>

          <h5 class="text-center">SNSアカウントで登録</h5><br>

      <div class="row">
        <div class="col-2 offset-4">
          <%= link_to user_github_omniauth_authorize_path do %>
            <button type="button" class="btn btn-outline-secondary btn-sm"><%= octicon "mark-github" %>　github</button>
          <% end %>
        </div>
        <div class="col-2">
          <%= link_to user_twitter_omniauth_authorize_path do %>
            <button type="button" class="btn btn-outline-primary btn-sm"><i class="fab fa-twitter"></i>　twitter</button>
          <% end %>
        </div>
      </div>
    <% end %>


  </div>
</div>
