<style>
  .up-header {
    padding: 50px;

  }
  .up {
    background-color: white;
    height:800px;
    margin-top: 150px;
  }
  body {
    background-color:#2a3644;
  }
</style>


<div class="container">
  <div class="up text-center">
        <h2 class="up-header">編集</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザーネーム", size:"50" %>
          </div><br>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"ユーザーネーム", size:"50" %>
          </div><br>

          <div class="field">

            <%= f.text_area :introduction, placeholder:"自己紹介", size:"50x5" %>
          </div><br>

          <div class="field">
            <%= f.attachment_field  :profile_image %>
          </div><br>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"新しいpassword", size:"50" %>
          </div><br>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"password確認", size:"50" %>
          </div><br>

          <div class="field">
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"現在のpassword", size:"50"%>
          </div><br>

          <div class="actions">
            <%= f.submit "更新",class:"btn btn-primary btn-sm" %>　
            <%= link_to "戻る", :back, class:"btn btn-primary btn-sm" %>
          </div><br><br>
        <% end %>


        <%= link_to "退会する", registration_path(resource_name),class:"btn btn-danger btn-sm", data: { confirm: "本当に退会しますか？" }, method: :delete %>


    </div>
</div>
